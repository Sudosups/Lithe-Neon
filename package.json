{
  "name": "LitheNeon",
  "productName": "Lithe Neon",
  "description": "Lithe GUI Wallet",
  "version": "v1.0.0",
  "homepage": "https://github.com/lithe-project",
  "repository": "https://github.com/Sudosups/Lithe-Neon",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "debug": "electron . debug",
    "dev": "electron . dev",
    "dist-win": "./node_modules/.bin/electron-builder --x64 --win -c.extraResources=./bin/win/lithe-service.exe",
    "dist-lin": "./node_modules/.bin/electron-builder --x64 --linux -c.extraResources=./bin/lin/lithee-service",
    "dist-mac": "./node_modules/.bin/electron-builder --x64 --mac -c.extraResources=./bin/osx/lithe-service"
  },
  "keywords": [],
  "author": "Rixombea, Macroshock, TurtleCoin Developers, Nibble Developers",
  "license": "ISC",
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^3.0.10",
    "electron-builder": "^20.36.2",
    "jshint": "^2.9.6"
  },
  "dependencies": {
    "@trodi/electron-splashscreen": "^0.3.4",
    "csv-writer": "^1.2.0",
    "electron-log": "^2.2.17",
    "electron-store": "^2.0.0",
    "qr-image": "^3.2.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "semver": "^5.6.0"
  },
  "build": {
    "appId": "Lithe",
    "copyright": "Copyright (c) 2018 Rixombea, Macroshock, TurtleCoin Developers, Nibble Developers",
    "directories": {
      "app": ".",
      "output": "dist",
      "buildResources": "build"
    },
    "linux": {
      "artifactName": "${productName}-v${version}-${os}.${ext}",
      "target": [
        "AppImage"
      ],
      "maintainer": "Sups (@Sudosups)",
      "category": "Office",
      "vendor": "NibbleClassic",
      "synopsis": "NibbleClassic GUI Wallet"
    },
    "win": {
      "target": "nsis",
      "publisherName": "NibbleClassic"
    },
    "nsis": {
      "artifactName": "${productName}-v${version}-${os}-${arch}-setup.${ext}",
      "oneClick": false,
      "perMachine": false
    },
    "mac": {
      "artifactName": "${productName}-v${version}-${os}-${arch}.${ext}",
      "category": "public.app-category.business",
      "target": "tar.gz"
    }
  },
  "postinstall": "./node_modules/.bin/electron-builder install-app-deps"
}
